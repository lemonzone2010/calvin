<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class table="T_SMARTORG_GROUP" name="com.apusic.ebiz.model.user.Group">
    <id access="field" name="id">
      <column name="F_ID"/>
      <generator class="native">
        <param name="sequence">seq_smartorg_group</param>
      </generator>
    </id>
    <property name="name" length="25" column="F_GROUP_NAME" access="field" unique="true" type="string"/>
    <property name="alias" length="50" column="F_GROUP_ALIAS" access="field" not-null="true" type="string"/>
    <many-to-one name="parent" column="F_PARENT_ID" class="com.apusic.ebiz.model.user.Group" cascade="none"/>

    <set name="groups" access="field" lazy="true" table="T_SMARTORG_GROUP">
		<key column="F_PARENT_ID"/>
		<one-to-many class="com.apusic.ebiz.model.user.Group"/>
    </set>

    <set name="users" access="field" lazy="true" table="T_SMARTORG_USER_GROUP" cascade="none">
    	<key column="F_GROUP_ID"/>
    	<many-to-many class="com.apusic.ebiz.model.user.User" column="F_USER_ID"/>
    </set>
  </class>
</hibernate-mapping>
