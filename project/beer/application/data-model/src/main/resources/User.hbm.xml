<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class table="T_SMARTORG_USER" name="com.apusic.ebiz.model.user.User">
    <id access="field" name="id">
      <column name="F_ID"/>
      <generator class="native">
        <param name="sequence">seq_smartorg_user</param>
      </generator>
    </id>
    <property name="name" length="50" column="F_NAME" access="field" unique="true" type="string"/>
    <property name="password" length="50" column="F_PASSWORD" access="field" not-null="true" type="string"/>
    <property name="disbled" length="2" column="F_DISABLED" access="field" type="boolean"/>
    <!-- <one-to-one name="profile" class="com.apusic.ebiz.model.user.UserProfile" property-ref="user" cascade="all"/> -->
    <property name="userType" length="25" column="F_TYPE" access="field" type="string"/>

    <set cascade="none" access="field" lazy="true" table="T_SMARTORG_USER_ROLE" name="roles">
      <key column="F_USER_ID"/>
      <many-to-many class="com.apusic.ebiz.model.user.Role" column="F_ROLE_ID"/>
    </set>

    <set name="groups" access="field" lazy="true" table="T_SMARTORG_USER_GROUP" cascade="none">
    	<key column="F_USER_ID"/>
    	<many-to-many class="com.apusic.ebiz.model.user.Group" column="F_GROUP_ID"/>
    </set>
  </class>
</hibernate-mapping>
