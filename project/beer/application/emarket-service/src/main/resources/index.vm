<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" /> 
<title>锦绣商城</title>
<link rel="stylesheet" type="text/css" href="/ebiz-resource/md/css/table.css" />
<link rel="stylesheet" type="text/css" href="/ebiz-resource/md/css/form.css" />
<link rel="stylesheet" type="text/css" href="/ebiz-resource/md/css/grid.css" />
<link rel="stylesheet" type="text/css" href="/ebiz-resource/md/css/all.css" />
<link rel="stylesheet" type="text/css" href="/ebiz-resource/md/css/_all.css" />
<link rel="stylesheet" type="text/css" href="/ebiz-resource/md/css/main/main.css" />
<link rel="stylesheet" type="text/css" href="/ebiz-resource/md/css/main/_main.css" />
<link rel="stylesheet" type="text/css" href="/ebiz-resource/js/operamasks/css/om-slider.css"/>

<script src="/ebiz-resource/js/jquery/jquery.js" type="text/javascript"></script>
<script src="/ebiz-resource/js/jquery/ui/jquery.ui.core.js" type="text/javascript"></script>
<script src="/ebiz-resource/md/js/imglazyload.js" type="text/javascript"></script>
<script src="/ebiz-resource/md/js/emarket/topinit.js" type="text/javascript"></script>
<script src="/ebiz-resource/js/operamasks/om-slider.js" type="text/javascript"></script>
<script src="/ebiz-resource/md/js/emarket/search.js" type="text/javascript"></script>
<script src="/ebiz-resource/md/js/emarket/shoppingcart.js" type="text/javascript"></script>
<script src="/ebiz-resource/md/js/emarket/cookiecount.js" type="text/javascript"></script>
<script src="/ebiz-resource/md/js/hotkeywords.js" type="text/javascript"></script>
<script type="text/javascript">
	
 	$(document).ready(function(){
 		$('#homepageMainAd').omSlider({interval: 2500});
 		ebiz_topinit('${server_ip}');
		ebiz_footinit('${server_ip}');
 	});
</script>

</head>
<body>
  #parse("/headTemplate.vm")

  <div class="row">
	  <div class="column grid_12" id="homepageMainAd">
	  		#foreach($ad in $homepageMainAd)
		     <a target="_blank" href=" $!ad.url "><img alt="" width="100%" height="100%" border="0" src=" $!ad.imagePath "/></a>
	    	#end
	  </div>

	  <div class="column grid_4" id="homepageRightAd" > <a target="_blank" href=" $!homepageRightAd.url "><img width="240" height="138"  src=" $!homepageRightAd.imagePath "></a>

	    <div id="zuixindongtai">
			<div class="more"><span><a target="_blank" href="/emarket/news/newsList.faces" class="track">更多&gt;&gt;</a></span>
	    	#foreach($news in $topNews)
		      <p><a target="_blank" class="fontred" href="/emarket/news/newsView.faces?newsId=${news.id}" title="$news.name">[公告]$StringUtil.splitString($news.name,24)</a></p>
	    	#end
	    	</div>
	    </div>
	  </div>
   </div>


   <div class="row">
  <div class="column grid_12">
    <div class="categories">
      <h2 title="商品分类">商品分类</h2>
      <ul class="catelist">
		#foreach($category in $categorys)
	        <li>
	          <h3>$category.name</h3>
		          <p>
			          #foreach($children in $category.childrens)
			          	<a title="$children.name" href="/emarket/search?keyword=${StringUtil.encode($children.name)}" target="_blank">$children.name</a>|
			          #end
			          <br/>
			           #foreach(  $brand  in $brandMap.get(${category.id}))
			           	#set($keyword="$brand.name $category.name")
		          	  	<a title="$brand.name" href="/emarket/search?keyword=${StringUtil.encode($keyword)}" target="_blank">$brand.name</a>|
		          	  #end
		          </p>
	        </li>
      	#end
      </ul>
    </div>
  </div>
  <div class="column grid_4">
    <div class="brandRec">
      <h2 title="品牌推荐">品牌推荐</h2>
      <div class="brandlist">
        <ul id="brandlist">
        	#foreach($brand in $brands)
         	 <li ><a title="$!brand.name" href="$!brand.url" target="_blank" style="display:  inline;"><img src="$!brand.logoPath" width="75" height="40" style="position: absolute; left: 0px; top: 5px;border: 1px solid #E0E0E0;"/></a></li>
            #end
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="row margin_top10">
  <div class="column grid_16 ">
    <div class="productAreaHead">
      <h2><a target="_blank" href="/emarket/search/special.faces?type=NEW" name="h-newproduct-logo" class="track">新品速递</a></h2>
      <div class="moreProduct"><a target="_blank" href="/emarket/search/special.faces?type=NEW" class="track">查看更多&gt;&gt;</a></div>
    </div>
  </div>
</div>
<div class="row margin_top10">
  <div class="column grid_16 ">
   <div id="top5">
      <dl>
      	 #foreach($recommend in $newProducts)
			     <dd #if($velocityCount % 6 == 0) style="width:143px"  #end>
			         <p class="compic"><a target="_blank" title="$!{recommend.product.productName}" href="/product/$!{recommend.product.id}.html"><img width="141" height="148"  src2="$!imageMap.get($!recommend.product.id)" style="display: inline;" /></a></p>
			          <br />
			          <p class="a1"><a target="_blank" title="$!{recommend.product.productName}" href="/product/$!{recommend.product.id}.html">$!recommend.product.productName</a></p>
			          <p class="a3">售价 ¥$!{recommend.product.retailPrice}</p>
       			 </dd>
       		#if($velocityCount == 6) </dl> <dl> #end
		 #end
      </dl>
    </div>
  </div>
</div>


<div class="row margin_top10">
  <div class="column grid_16 ">
    <div class="productAreaHead">
      <h2><a target="_blank" href="/emarket/search/special.faces?type=HOT" class="track">特价商品</a></h2>
      <div class="moreProduct"><a target="_blank" href="/emarket/search/special.faces?type=HOT" class="track">查看更多&gt;&gt;</a></div>
    </div>
  </div>
</div>
<div class="row margin_top10">
 <div class="column grid_4 " id="homepageHotAd"><a href="${homepageHotAd.url}"> <img src2="${homepageHotAd.imagePath}" width="242" height="460"  style="width:242; height:400;"/> </div>
  <div class="column grid_12 ">
    <div id="top6">
      <dl>
      	 #foreach($recommend in $hotProducts)
			     <dd  #if(  $velocityCount % 5 == 0) style="width:143px"  #end>
			          <p class="compic"><a target="_blank" title="$!{recommend.product.productName}" href="/product/$!{recommend.product.id}.html"><img width="141" height="148" src2="$!imageMap.get($!recommend.product.id)" style="display: inline;" /></a></p>
			          <br />
			          <p class="a1"><a target="_blank" title="$!{recommend.product.productName}" href="/product/$!{recommend.product.id}.html">$!recommend.product.productName</a></p>
			          <p class="a3">售价 ¥$!{recommend.product.retailPrice}</p>
       			 </dd>
       		#if($velocityCount == 5) </dl> <dl> #end
		 #end
      </dl>
    </div>
  </div>
</div>


<div class="row margin_top10">
  <div class="column grid_16 ">
    <div class="productAreaHead">
      <h2><a target="_blank" href="/emarket/search/special.faces?type=RECOMMEND" name="h-newproduct-logo" class="track">商城推荐</a></h2>
      <div class="moreProduct"><a target="_blank" href="/emarket/search/special.faces?type=RECOMMEND" class="track">查看更多&gt;&gt;</a></div>
    </div>
  </div>
</div>

<div class="row margin_top10">
  <div class="column grid_4 " id="homepageRecommendAd"><a href="$!{homepageRecommendAd.url}"> <img  width="242" height="460" src2="$!{homepageRecommendAd.imagePath}"  style="width:242; height:400;" /> </div>
  <div class="column grid_12 ">
    <div id="top6">
      <dl>
      	#foreach($recommend in $recommendProducts)
			     <dd #if($velocityCount % 5 == 0) style="width:143px"  #end>
			         <p class="compic"><a target="_blank" title="$!{recommend.product.productName}" href="/product/$!{recommend.product.id}.html"><img  width="141" height="148"  src2="$!imageMap.get($!recommend.product.id)" style="display: inline;" /></a></p>
			          <br />
			          <p class="a1"><a target="_blank" title="$!{recommend.product.productName}" href="/product/$!{recommend.product.id}.html">$!recommend.product.productName</a></p>
			          <p class="a3">售价 ¥$!{recommend.product.retailPrice}</p>
       			 </dd>
       		#if($velocityCount == 5) </dl> <dl> #end
		 #end
      </dl>
    </div>
  </div>
</div>



  #parse("/footTemplate.vm")
</body>
</html>